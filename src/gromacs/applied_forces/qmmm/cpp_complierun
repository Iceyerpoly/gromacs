
g++ $(python3.10-config --cflags) -I/home/xzhao287/miniconda3/lib/python3.10/site-packages/numpy/core/include -O0 -g gmxdummy.cpp -o gmxdummy $(python3.10-config --ldflags --embed)
#use this to tell the compiler where to find API libraries for C++/Python, NumPy librabry needs to be individually located

LD_LIBRARY_PATH=$HOME/miniconda3/lib:$LD_LIBRARY_PATH valgrind ./gmxdummy 2>log_err 1>log_out
#tell the terminal where to find dynamic/shared library when running the executable

